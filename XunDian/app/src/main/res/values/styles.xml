<resources>

    <!-- Base application theme. Theme.AppCompat.Light.NoActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- my loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <!--工作中心 开始-->
    <style name="GongZuoZhongXin"></style>
    <!--1LinearLayout-->
    <style name="GongZuoZhongXin.1LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <!--2LinearLayout-->
    <style name="GongZuoZhongXin.2LinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/gong_zuo_zhong_xin_button</item>
    </style>
    <!--3LinearLayout 按钮点击时效果 -->
    <style name="GongZuoZhongXin.3LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <!--TextView样式-->
    <style name="GongZuoZhongXin.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18dp</item>
    </style>
    <!--ImageView-->
    <style name="GongZuoZhongXin.ImageView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--工作中心 结束-->

    <!--我的信息-->
    <style name="WoDeXinXiTextView">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--巡店管理-->

    <style name="XunDianButton">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="XunDianLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>



    <style name="XunDian">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/login_border</item>
    </style>

    <style name="XunDianEditText" parent="XunDian">
        <item name="android:textCursorDrawable">@drawable/edit_cursor_color</item>
    </style>

    <style name="XunDianTextView" parent="XunDian">
        <item name="android:textColor">@color/heise</item>
    </style>
    <!--时间-->
    <style name="XunDianTimeTextView" parent="XunDianTextView">
        <item name="android:hint">@string/ri_qi</item>
    </style>
    <!--文本-->
    <style name="XunDianTextTextView" parent="XunDianEditText">
        <item name="android:hint">@string/wen_ben</item>
    </style>
    <!--选择器-->
    <style name="XunDianSelectTextView" parent="XunDianTextView">
        <item name="android:hint">@string/xun_ze_qi</item>
    </style>
    <!--数字-->
    <style name="XunDianNumEditText" parent="XunDianEditText">
        <item name="android:hint">@string/shu_zi</item>
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">number</item>
    </style>
    <!--标题-->
    <style name="XunDianTitleLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="XunDianTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/biao_ti</item>
    </style>

    <style name="XunDianTitleTextView1">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/hongse</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/xin</item>
    </style>
    
    <!--照片-->
    <style name="XunDianZhaoPianLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="XunDianZhaoPianLinearLayout1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/xun_dian_img_border</item>
    </style>
    <style name="XunDianZhaoPianFrameLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="XunDianZhaoPianImageView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:cropToPadding">true</item>
    </style>
    <style name="XunDianZhaoPianImageView1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:onClick">true</item>
        <item name="android:src">@drawable/xun_dian_img_add</item>
    </style>


    <style name="IndexBuJuLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--添加巡店计划-->
    <style name="LinearLayoutHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bottom_border</item>
    </style>
    <!--TextView-->
    <style name="TjJiHuaTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/heise</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <!--TextView-->
    <style name="TjJiHuaTextView1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>
    <!--imageView-->
    <style name="TjJiHuaImageView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/right_hui_se</item>
    </style>

    <!--添加计划textview-->
    <style name="TjJiHuaLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/huisefc</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!--本周工作样式-->
    <style name="benZhouLinearLayout">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="benZhouLinearLayoutTV">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:text">08-03 周一</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/heise</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="benZhouLinearLayoutTV1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:text">完成率10%</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/huise6</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
