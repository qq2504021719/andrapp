<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/title_nei_ye"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/huisef5Calendar"
        >

        <com.bignerdranch.android.xundian.ui.BounceScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--未审核-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/huisef5Calendar"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bottom_border_huise">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="@color/heise"
                            android:textSize="18dp"
                            android:text="未审核"/>

                    </LinearLayout>

                    <!--数据展示-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/huisef5Calendar"
                        >

                        <LinearLayout
                            android:id="@+id/linear_ji_hua_wei_shen_he"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:orientation="vertical">

                            <!--1-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/bottom_border_huise">

                                <!--2-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:gravity="center_vertical"
                                    android:paddingRight="10dp"
                                    android:orientation="horizontal">
                                    <!--1-->
                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginLeft="10dp"
                                        android:src="@drawable/ka_qing_ku_lian"/>
                                    <!--1-->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="5dp"
                                        android:text="李雷"
                                        android:textColor="@color/heise"/>
                                    <!--2-->
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/bottom_hui_se"/>

                                </LinearLayout>

                                <!--3-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@color/colorAccent">

                                    <!--4-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:background="@drawable/bottom_border"
                                        android:layout_marginBottom="5dp">
                                        <!--5-->
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="25dp"
                                            android:gravity="center_vertical"
                                            android:paddingRight="10dp"
                                            android:orientation="horizontal">
                                            <!--1-->
                                            <ImageView
                                                android:layout_width="16dp"
                                                android:layout_height="16dp"
                                                android:layout_marginLeft="10dp"
                                                android:src="@drawable/ka_qing_ku_lian"/>
                                            <!--2-->
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:padding="5dp"
                                                android:textSize="12dp"
                                                android:text="10-12 周一"/>


                                        </LinearLayout>


                                    </LinearLayout>

                                    <!--4-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:background="@drawable/bottom_border">
                                        <!--6-->
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="25dp"
                                            android:gravity="right"
                                            android:paddingRight="10dp"
                                            android:orientation="horizontal">

                                            <!--3-->
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingTop="2dp"
                                                android:paddingBottom="2dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:textColor="@color/colorAccent"
                                                android:textSize="12dp"
                                                android:text="同意"
                                                android:background="@color/zhuti"/>

                                            <!--4-->
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingTop="2dp"
                                                android:paddingBottom="2dp"
                                                android:paddingLeft="10dp"
                                                android:paddingRight="10dp"
                                                android:layout_marginLeft="20dp"
                                                android:textColor="@color/heise"
                                                android:textSize="12dp"
                                                android:text="不同意"
                                                android:background="@color/huise"/>


                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

                <!--已审核-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/huisef5Calendar"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bottom_border_huise">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="@color/heise"
                            android:textSize="18dp"
                            android:text="已审核"/>

                    </LinearLayout>

                    <!--数据展示-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/huisef5Calendar"
                        >

                        <LinearLayout
                            android:id="@+id/linear_ji_hua_yi_shen_he"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:orientation="vertical">

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </com.bignerdranch.android.xundian.ui.BounceScrollView>

    </LinearLayout>

</LinearLayout>