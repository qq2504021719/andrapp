<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <include layout="@layout/title_nei_ye"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lei_xin_linearLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/zhuti">
            <TextView
                android:id="@+id/lei_xin_textview"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center"
                android:text="门店类型"
                android:textColor="@color/colorAccent"
                android:background="@null"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/men_dian_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/huise">

            <TextView
                android:id="@+id/men_dian_textview"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textSize="16dp"
                android:gravity="center"
                android:text="门店"
                android:textColor="@color/colorAccent"
                android:background="@null"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/xiang_xi_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
