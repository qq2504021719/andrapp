<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/title_nei_ye"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/huisef5Calendar"
        >

        <com.bignerdranch.android.xundian.ui.BounceScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--未审核-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorAccent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bottom_border">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="@color/heise"
                            android:textSize="18dp"
                            android:text="未审核"/>

                    </LinearLayout>

                    <!--数据展示-->
                    <LinearLayout
                        android:id="@+id/linear_wei_shen_he"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:orientation="vertical">

                        <!-- 请假记录    -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/heise"
                                android:textSize="16dp"
                                android:text="@string/qing_jia_ji_lv"
                                android:layout_marginTop="10dp"/>

                            <!--请假数据-->
                            <LinearLayout
                                android:id="@+id/linear_qing_jia_data"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="30dp">

                                <!--1-->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="vertical">
                                    <!--第一行-->
                                    <!--2-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:paddingLeft="5dp">
                                        <!--3-->
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:orientation="vertical">
                                            <!--1-->
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/heise"
                                                android:textSize="15dp"
                                                android:text="1 余雷"/>
                                            <!--2-->
                                            <TextView
                                                android:layout_marginTop="5dp"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="15dp"
                                                android:textSize="12dp"
                                                android:text="2017-10-12 事假 找房"/>
                                        </LinearLayout>
                                        <!--4-->
                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="right"
                                            android:orientation="horizontal">

                                            <!--3-->
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textColor="@color/hongse1"
                                                android:text="待审核"/>
                                            <!--1-->
                                            <ImageView
                                                android:layout_width="18dp"
                                                android:layout_height="18dp"
                                                android:src="@drawable/kao_qing_xing"/>


                                        </LinearLayout>



                                    </LinearLayout>

                                    <!--第二行-->
                                    <!--5-->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginTop="5dp"
                                        android:paddingLeft="15dp">
                                        <!--6-->
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <!--7-->
                                            <LinearLayout
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:orientation="horizontal"
                                                android:gravity="bottom"
                                                android:layout_weight="1"
                                                android:layout_marginRight="10dp"
                                                >
                                                <!--2-->
                                                <ImageView
                                                    android:layout_width="22dp"
                                                    android:layout_height="22dp"
                                                    android:src="@drawable/kao_qing_yong_hu"/>
                                                <!--4-->
                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text=" 1:吴绍康 "
                                                    android:textColor="@color/heise"
                                                    android:textSize="12dp"/>
                                                <!--3-->
                                                <ImageView
                                                    android:layout_width="16dp"
                                                    android:layout_height="16dp"
                                                    android:src="@drawable/ka_qing_xiao_lian"/>

                                            </LinearLayout>
                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!--已审核-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/huisef5Calendar"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bottom_border_huise">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="20dp"
                            android:textColor="@color/heise"
                            android:textSize="18dp"
                            android:text="已审核"/>

                    </LinearLayout>

                    <!--数据展示-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/huisef5Calendar"
                        >

                        <LinearLayout
                            android:id="@+id/linear_yi_shen_he"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:orientation="vertical">

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        </com.bignerdranch.android.xundian.ui.BounceScrollView>

    </LinearLayout>

</LinearLayout>